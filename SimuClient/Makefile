# Makefile
#
# Generated by phxrpc_pb2server from simu.proto
#
#

include /usr/local/etc/phxrpc/phxrpc.mk

LDFLAGS := -L$(PHXRPC_ROOT)/lib -lphxrpc $(LDFLAGS) -lrt -lpthread

# choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = simu.pb.o \
		simu_service_impl.o \
		phxrpc_simu_service.o \
		phxrpc_simu_dispatcher.o \
		simu_server_config.o \
		simu_main.o \
		ServiceSelector.o

CLI_OBJS = simu.pb.o \
		simu_client.o \
		phxrpc_simu_stub.o

TARGETS = libsimu_client.a simu_main simu_tool_main

all: $(TARGETS)

simu_main: $(SVR_OBJS)
	$(LINKER) $^ -L../AdminServer/ -ladmin_client -L../Comp/ -lcomp_client $(LDFLAGS) -o $@

libsimu_client.a: $(CLI_OBJS)
	$(AR) $@ $^

simu_tool_main: phxrpc_simu_tool.o simu_tool_impl.o simu_tool_main.o
	$(LINKER) $^ -L. -lsimu_client $(LDFLAGS) -o $@

########## message ##########

simu.pb.cc: simu.pb.h

simu.pb.h: simu.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_simu_stub.cpp: phxrpc_simu_stub.h
phxrpc_simu_stub.o: phxrpc_simu_stub.h
simu_client.cpp: phxrpc_simu_stub.h
simu_client.o: phxrpc_simu_stub.h

phxrpc_simu_stub.h: simu.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d . -p mqtt

########## service ##########

phxrpc_simu_service.cpp: phxrpc_simu_service.h
phxrpc_simu_service.o: phxrpc_simu_service.h
simu_service_impl.cpp: phxrpc_simu_service.h
simu_service_impl.o: phxrpc_simu_service.h
phxrpc_simu_dispatcher.cpp: phxrpc_simu_service.h
phxrpc_simu_dispatcher.o: phxrpc_simu_service.h
ServiceSelector.o: ServiceSelector.cpp

phxrpc_simu_service.h: simu.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d . -p mqtt

########## tool ##########

phxrpc_simu_tool.cpp: phxrpc_simu_tool.h
phxrpc_simu_tool.o: phxrpc_simu_tool.h
simu_tool_impl.cpp: phxrpc_simu_tool.h
simu_tool_impl.o: phxrpc_simu_tool.h
simu_tool_main.cpp: phxrpc_simu_tool.h
simu_tool_main.o: phxrpc_simu_tool.h

phxrpc_simu_tool.h: simu.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d . -p mqtt

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

