include /usr/local/etc/phxrpc/phxrpc.mk

LDFLAGS := -L$(PHXRPC_ROOT)/lib -lphxrpc $(LDFLAGS)

# choose to use boost for network
#LDFLAGS := $(PLUGIN_BOOST_LDFLAGS) $(LDFLAGS)

SVR_OBJS = admin.pb.o \
		   admin_service_impl.o \
		   phxrpc_admin_service.o \
		   phxrpc_admin_dispatcher.o \
		   admin_server_config.o \
		   admin_main.o \
		   AdminData.o \
		   HbThread.o

CLI_OBJS = admin.pb.o \
		admin_client.o \
		phxrpc_admin_stub.o

TARGETS = libadmin_client.a admin_main admin_tool_main

all: $(TARGETS)

admin_main: $(SVR_OBJS)
	$(LINKER) $^ -L../NodeAgent/ -lnode_client $(LDFLAGS) -o $@

libadmin_client.a: $(CLI_OBJS)
	$(AR) $@ $^

admin_tool_main: phxrpc_admin_tool.o admin_tool_impl.o admin_tool_main.o
	$(LINKER) $^ -L. -ladmin_client $(LDFLAGS) -o $@

########## message ##########

admin.pb.cc: admin.pb.h

admin.pb.h: admin.proto
	$(PROTOBUF_ROOT)/bin/protoc -I$(PROTOBUF_ROOT)/include --cpp_out=. -I$(PHXRPC_ROOT) -I. $^

########## client ##########

phxrpc_admin_stub.cpp: phxrpc_admin_stub.h
phxrpc_admin_stub.o: phxrpc_admin_stub.h
admin_client.cpp: phxrpc_admin_stub.h
admin_client.o: phxrpc_admin_stub.h

phxrpc_admin_stub.h: admin.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2client $(PBFLAGS) -f $^ -d . -p mqtt

########## service ##########

phxrpc_admin_service.cpp: phxrpc_admin_service.h
phxrpc_admin_service.o: phxrpc_admin_service.h
admin_service_impl.cpp: phxrpc_admin_service.h
admin_service_impl.o: phxrpc_admin_service.h
phxrpc_admin_dispatcher.cpp: phxrpc_admin_service.h
phxrpc_admin_dispatcher.o: phxrpc_admin_service.h
AdminData.o: AdminData.h
HbThread.o: HbThread.h

phxrpc_admin_service.h: admin.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2service $(PBFLAGS) -f $^ -d . -p mqtt

########## tool ##########

phxrpc_admin_tool.cpp: phxrpc_admin_tool.h
phxrpc_admin_tool.o: phxrpc_admin_tool.h
admin_tool_impl.cpp: phxrpc_admin_tool.h
admin_tool_impl.o: phxrpc_admin_tool.h
admin_tool_main.cpp: phxrpc_admin_tool.h
admin_tool_main.o: phxrpc_admin_tool.h

phxrpc_admin_tool.h: admin.proto
	$(PHXRPC_ROOT)/codegen/phxrpc_pb2tool $(PBFLAGS) -f $^ -d . -p mqtt

clean:
	@($(RM) $(TARGETS))
	@($(RM) *.o)
	@($(RM) phxrpc_*)
	@($(RM) *.pb.*)

